<UserControl x:Class="JaCoCoReader.Core.Views.ReportMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:codeCoverage="clr-namespace:JaCoCoReader.Core.ViewModels.CodeCoverage"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=codeCoverage:ReportViewModel, IsDesignTimeCreatable=false}"
             d:DesignHeight="40" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding LoadCommand}" Margin="5">Add Code Coverage file</Button>
        <CheckBox Content="Show hits" IsChecked="{Binding ShowLinesHit}" Margin="5"/>

        <Button Command="{Binding RefreshCommand}" Margin="5">Refresh</Button>
    </StackPanel>
</UserControl>
