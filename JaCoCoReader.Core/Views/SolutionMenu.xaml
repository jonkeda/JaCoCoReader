<UserControl x:Class="JaCoCoReader.Core.Views.SolutionMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tests1="clr-namespace:JaCoCoReader.Core.ViewModels.Tests"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=tests1:SolutionViewModel, IsDesignTimeCreatable=false}"
             d:DesignHeight="40" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding LoadCommand}" Margin="5">Add folder</Button>
        <!--<Button Command="{Binding RefreshCommand}" Margin="5">Refresh</Button>-->
        <Button Command="{Binding RunCommand}" Margin="5">Run</Button>
    </StackPanel>
</UserControl>
